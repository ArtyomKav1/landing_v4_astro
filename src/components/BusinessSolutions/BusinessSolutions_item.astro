---
import { Image } from "astro:assets";

const { img, title, text } = Astro.props;
---

<div class="py-8 flex flex-col gap-5">
    <div><Image src={img} alt="" /></div>
    <div class="flex flex-col gap-3">
        <div class="text-[#0D0628] font-semibold text-[20px] leading-7">{title}</div>
        <div class="text-[#5F5B70] text-[16px] leading-6">{text}</div>

    </div>
</div>
