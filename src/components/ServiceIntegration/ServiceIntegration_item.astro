---
import { Image } from "astro:assets";
const { img, text } = Astro.props;
---

<div
    class="bg-[#FFFFFF] rounded-[20px] px-2 pt-5 pb-4 flex flex-col gap-3.5 items-center flex-1 hover:-translate-y-1 transition-all duration-300"
>
    <div><Image src={img} alt="" /></div>
    <div
        class="text-[16px] max-sm:text-[12px] text-[#5F5B70] text-center leading-6 max-sm:leading-[18px]"
    >
        {text}
    </div>
</div>
