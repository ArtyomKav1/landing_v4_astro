---
import { Image } from "astro:assets";

const { img, title, text } = Astro.props;
---

<div class="py-[32px] flex flex-col gap-[20px]">
    <div><Image src={img} alt="" /></div>
    <div class="flex flex-col gap-[12px]">
        <div class="text-[#0D0628] font-semibold text-[20px] leading-[28px]">{title}</div>
        <div class="text-[#5F5B70] text-[16px] leading-[24px]">{text}</div>

    </div>
</div>
