---
import { Image } from "astro:assets";
import LogoBigData from '@uploads/SliderBigData/Logo_BigData.svg';
import { Slider } from "./Slider";
---

<div class="max-w-[1224px] mx-auto">
  <div
    class="flex justify-between px-12 max-sm:px-5 h-20 items-center"
  >
    <div>
      <Image src={LogoBigData} alt="Logo_BigData" />
    </div>
    <div
      class="flex gap-8 font-medium text-[15px] text-[#8C26EA] max-m:hidden *:duration-300 *:transition-colors cursor-pointer"
    >
      <div class="hover:text-[#8C26EA]/50">
        <a href="#advantages">Преимущества</a>
      </div>
      <div class="hover:text-[#8C26EA]/50">
        <a href="#industries">Отрасли</a>
      </div>
      <div class="hover:text-[#8C26EA]/50">
        <a href="#working">Как работает</a>
      </div>
      <div class="hover:text-[#8C26EA]/50">
        <a href="#sources">Источники</a>
      </div>
      <div class="hover:text-[#8C26EA]/50">
        <a href="#case">Кейсы</a>
      </div>
    </div>
  </div>
  <Slider client:load />
</div>
